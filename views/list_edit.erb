<h4>Edit: <%= @list.name() %></h4>
<form action="/lists/<%= @list.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your list:</label>
  <input id="name" name="name" type="text">

  <button class="btn btn-primary btn-sm" type="submit">Update</button>
</form>

<h4>New Task:</h4>
<form action="/lists/<%= @list.id() %>/edit" method="post">
  <label for="description">description of task</label>
  <input id="description" type="text" name="description" value="">

  <button class="btn btn-primary btn-sm" type="submit" name="button">create</button>
</form>

<h4>Tasks:</h4>
<ul>
  <% @list.tasks().each() do |task| %>
    <li><%= task.description() %></li>
  <% end %>
</ul>

<form action="/lists/<%= @list.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="btn btn-danger btn-sm" type="submit">Delete list</button>
</form>

<a href="/" style="color: white; background-color: black; margin-top: 10px;" class="btn btn-sm" type="button" name="button">Back</a>
